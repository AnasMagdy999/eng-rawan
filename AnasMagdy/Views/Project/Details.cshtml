                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Priorty)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Deadline)
                    </td>
                    <td>
                        <a class="nav-link text-dark" asp-route-id="@item.TeamMemberID" asp-area="" asp-controller="TeamMember" asp-action="TeamMemberDetails">@item.TeamMember.Name</a>
 
@*                         @Html.ActionLink($"{item.TeamMember.Name}", "TeamMemberDetails", new { id = item.TeamMemberID })
 *@                    </td>
                    <td>
                        <a class="nav-link text-dark" asp-route-id="@item.Id" asp-area="" asp-controller="Task" asp-action="Edit">Editt</a>
@*                         @Html.ActionLink("Edit", "Edit", new { id = item.Id }) 
 *@                      
